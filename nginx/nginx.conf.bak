user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
        worker_connections 768;
}

http {
        sendfile on;
        tcp_nopush on;
        tcp_nodelay on;
        keepalive_timeout 65;
        types_hash_max_size 2048;
        server_tokens off;

        server_names_hash_bucket_size 64;
        server_name_in_redirect off;

        include /etc/nginx/mime.types;
        default_type application/octet-stream;

     map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
     }

    upstream shiny {
        server ndexr.com:8600;
    }

    upstream blog {
        server ndexr.com:4000;
    }

    server {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        rewrite ^/shiny$ $scheme://$http_host/shiny/ permanent;

        location / {
            rewrite ^/shiny/(.*)$ /$1 break;
            proxy_pass http://ndexr.com:8600/;
            proxy_redirect / $scheme://$http_host/shiny/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_read_timeout 20d;
            proxy_buffering off;
        }

        rewrite ^/blog/(.*) /blog/$1 break;

        location /blog {
            rewrite ^/blog/(.*)$ /blog/$1 break;
            proxy_pass http://ndexr.com:4000/blog/;
            proxy_redirect /blog $scheme://$http_host/blog/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_read_timeout 20d;
            proxy_buffering off;
        }

        server_name ndexr.com www.ndexr.com;
    
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ndexr.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ndexr.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}

        access_log /var/log/nginx/access.log;
        error_log /var/log/nginx/error.log;

        gzip on;

        gzip_vary on;
        gzip_proxied any;
        gzip_comp_level 6;
        gzip_buffers 16 8k;
        gzip_http_version 1.1;
        gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

        include /etc/nginx/sites-enabled/*;


    server {
    if ($host = www.ndexr.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = ndexr.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen          80;
        server_name ndexr.com www.ndexr.com;
    return 404; # managed by Certbot




}}